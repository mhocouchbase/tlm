#!/bin/sh -ex

cd deps/packages
rm -rf build
mkdir build
cd build
if [ "x${DISTRO}" = "xmacarm" ]; then
    cmake .. -DPACKAGE=${PACKAGE} -DCMAKE_OSX_ARCHITECTURES=arm64
else
    cmake .. -DPACKAGE=${PACKAGE}
fi

cmake --build . --target ${PACKAGE}

if [ x$1 = xinstall ]
then
    cp deps/*/*/*.tgz deps/*/*/*.md5 ~/.cbdepscache
fi
